@using Microsoft.AspNetCore.Identity;
@using MyCRM.ViewModels;
@using System.Reflection;
@model EditUserRolesViewModel
@{
    ViewData["Title"] = "Роли " + @Model.User.GetShortName();
}
<section class="content">
    <div class="container-fluid">
        <div class="card card-dark" style="margin-top: 25px">
            <div class="card-header">
                <h3 class="card-title">Редактирование роли пользователя @Model.User.GetShortName()</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="EditRoles" method="post">
                    <input type="hidden" name="userId" value="@Model.User.Id" />
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover m-0">
                            <thead style=" position: sticky; top:-1px; z-index:500;">
                                <tr>
                                    @foreach(var roleGroup in Model.AllRoles.Select(c=>c.Item1))
                                    {
                                        <th scope="col">@roleGroup</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach(var roleGroup in Model.AllRoles.Select(c=>c.Item2))
                                    {
                                        <td>
                                        @foreach(var role in roleGroup)
                                        {
                                            <div class="form-check form-switch" style="display: flex;">
                                                <input class="form-check-input" type="checkbox" name="roles" value="@role.Name"
                                                @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> <span style="margin-left: 10px;">@role.Name <br /></span>
                                            </div>
                                        }
                                        </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</section>
