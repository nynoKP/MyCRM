@model RegisterUser
@{
    ViewData["Title"] = "Создание профиля";
}
<section class="content">
    <div class="container-fluid">
        <div class="card card-dark" style="margin-top: 25px">
            <div class="card-header">
                <h3 class="card-title">Создание профиля</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form role="form" class="text-start" method="post" asp-action="Add">
                    <table class="table table-striped">
                        <tr>
                            <th><label class="form-label">Фамилия:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="LastName" required class="form-control" autocomplete="lastname" aria-required="true" placeholder="Фамилия" /></div></td>
                        </tr>
                        <tr>
                            <th><label class="form-label">Имя:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="FirstName" required class="form-control" autocomplete="firstname" aria-required="true" placeholder="Имя" /></div></td>
                        </tr>
                        <tr>
                            <th><label class="form-label">Отчество:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="Patronymic" required class="form-control" autocomplete="patronymic" aria-required="true" placeholder="Отчество" /></div></td>
                        </tr>
                        <tr>
                            <th><label class="form-label">Email:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="Email" required class="form-control" autocomplete="email" aria-required="true" placeholder="Почта (example@test.com)" /></div></td>
                        </tr>
                        <tr>
                            <th><label class="form-label">Номер телефона:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="PhoneNumber" required class="form-control" autocomplete="phone" aria-required="true" placeholder="Номер телефона"></div></td>
                        </tr>
                        <tr>
                            <th><label class="form-label">Логин:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="UserName" required class="form-control" autocomplete="username" aria-required="true" placeholder="Логин" /></div></td>
                        </tr>
                        <tr>
                            <th><label class="form-label">Пароль:</label></th>
                            <td><div class="input-group input-group-outline mb-3"><input asp-for="Password" required class="form-control" autocomplete="current-password" aria-required="true" placeholder="Пароль" /></div></td>
                        </tr>
                    </table>
                    <div style="display: flex;">
                        <div style="width: 10%;">
                            <button type="submit" class="btn bg-gradient-success w-100 toast-btn">Сохранить</button>
                        </div>
                        <div style="width: 10%; margin-left: 20px">
                            <a class="btn bg-gradient-danger w-100 toast-btn" href="##" onClick="history.go(-1); return false;">Назад</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>