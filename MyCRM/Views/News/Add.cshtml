@{
    ViewData["Title"] = "Создать новость";
}
<link rel="stylesheet" href="~/plugins/summernote/summernote-bs5.min.css" />
<script type="text/javascript" src="~/plugins/summernote/summernote-bs5.min.js"></script>

<section class="content">
    <div class="container-fluid">
        <div class="card card-dark" style="margin-top: 25px">
            <div class="card-header">
                <h3 class="card-title">Создать новость</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    <div class="form-group">
                        <label for="inputName">Наименование</label>
                        <input class="form-control" id="inputName" required name="Name" />
                    </div>
                    <div class="form-group">
                        <label for="summernote">Описание</label>
                    </div>
                    <div class="form-group">
                        <textarea id="summernote" required name="Description"></textarea>
                    </div>
                    <div style="display: flex;">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                        </div>
                        <div style="width: 10%; margin-left: 20px">
                            <a class="btn bg-gradient-danger" href="##" onClick="history.go(-1); return false;">Назад</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 500
        });
    });
</script>