@model List<News>
@{
    ViewData["Title"] = "Home Page";
}
<div class="">
    <h1 class="display-4">Новости</h1>
    <div>
        <a type="submit" class="btn btn-primary" asp-action="FormCreate">Создать</a>
    </div>
    <div class="card-body">
        @if (Model.Count>0)
        {
            foreach(var newsitem in Model)
            {
                <div class="card" style="width: 80%;">
                    <div class="card-body">
                        <h5 class="card-title">@newsitem.Name</h5>
                        <h6 class="card-subtitle mb-1 text-muted">Id новости: @newsitem.Id</h6>
                        <p class="card-text">@newsitem.Description</p>
                        <p>Автор: <a href="#" class="card-link">Test</a></p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <h2 class="display-2">Нет новостей</h2>
            </div>
        }
    </div>
</div>